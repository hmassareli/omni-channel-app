# Estágio 1: Build
FROM node:20-slim AS builder

# Instalar openssl para o Prisma
RUN apt-get update -y && apt-get install -y openssl

WORKDIR /app

# Argumento de build para a URL da API
ARG VITE_API_URL
ARG VITE_REDIRECT_AUTH_URL
ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_ANON_KEY
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_REDIRECT_AUTH_URL=$VITE_REDIRECT_AUTH_URL
ENV VITE_SUPABASE_URL=$VITE_SUPABASE_URL
ENV VITE_SUPABASE_ANON_KEY=$VITE_SUPABASE_ANON_KEY

COPY package.json ./
COPY apps/web/package.json ./apps/web/
COPY apps/api/package.json ./apps/api/

# Fresh install para garantir binários Linux corretos para rolldown
# Não usa package-lock.json do Windows para evitar binários incompatíveis
RUN npm install --include=optional

COPY apps/web ./apps/web
COPY apps/api ./apps/api

# Gerar o Prisma Client para que os tipos estejam disponíveis para o frontend
RUN npx prisma generate --schema=apps/api/prisma/schema.prisma

# Build direto na pasta do web
WORKDIR /app/apps/web
RUN npm run build

# Estágio 2: Runner (Nginx)
FROM nginx:stable-alpine AS runner

COPY --from=builder /app/apps/web/dist /usr/share/nginx/html

RUN echo 'server { \
    listen 80; \
    location / { \
        root /usr/share/nginx/html; \
        index index.html; \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
